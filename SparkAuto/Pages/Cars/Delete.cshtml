@page
@model SparkAuto.Pages.Cars.DeleteModel
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<br />
<h2 class="text-info">Delete Car</h2>
<br />
<form method="post">
    <div class=" border  backgroundWhite">
        <input type="hidden" asp-for="Car.Id" />
        <input type="hidden" asp-for="Car.UserId" />
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Car.VIN" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.VIN" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Car.Make" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Make" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Car.Model" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Model" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Car.Style" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Style" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Car.Year" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Year" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Car.Miles" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Miles" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row ">
            <div class="col-2">
                <label asp-for="Car.Color" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Car.Color" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger form-control" value="Delete" />
                    </div>
                    <div class="col-6">
                        <a asp-page="Index" asp-route-userId="@Model.Car.UserId" class="btn btn-success form-control">Back to List</a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
